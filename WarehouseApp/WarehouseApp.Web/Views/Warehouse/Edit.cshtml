@model WarehouseApp.Web.ViewModels.Warehouse.EditWarehouseInputModel

@{
    ViewData["Title"] = "Edit Warehouse";
    var returnToDetails = TempData.Peek("ReturnToDetails") as bool? ?? false;

}

@section HeadExtras {
    <link rel="stylesheet" href="~/css/warehouse-create-edit.css" asp-append-version="true" />
}

<h2 class="text-center text-white mb-5 fw-bold">Edit Warehouse</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })

            <form asp-action="Edit" asp-controller="Warehouse" method="post" class="bg-dark p-4 rounded shadow-lg" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Name" class="form-label text-white fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter warehouse name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Address" class="form-label text-white fw-semibold"></label>
                    <input asp-for="Address" class="form-control form-control-lg" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-5">
                    <label asp-for="Size" class="form-label text-white fw-semibold"></label>
                    <input asp-for="Size" class="form-control form-control-lg" placeholder="Enter size (e.g. 1500 square meters m²)" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-gradient px-5 fw-semibold">
                        <i class="fas fa-save me-2"></i> Save
                    </button>
                    <a href="@(returnToDetails ? 
                               Url.Action("Details", "Warehouse", new { id = Model.Id }) : 
                               Url.Action("Index", "Warehouse"))"
                       class="btn btn-outline-secondary ms-3 px-4 fw-semibold">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
