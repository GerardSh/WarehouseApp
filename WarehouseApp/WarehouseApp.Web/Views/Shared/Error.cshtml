@model ErrorViewModel
@{
    Layout = null;
    ViewData["Title"] = "Server Error";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>500 - Server Error | WarehouseApp</title>
    <link rel="stylesheet" href="~/css/error-pages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" href="~/warehouse-solid.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <main class="d-flex flex-column justify-content-center align-items-center min-vh-100 text-center">
        <i class="fas fa-exclamation-triangle fa-5x mb-4" style="color:#e67e22;"></i>
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="btn-group flex-wrap justify-content-center gap-7">
            <a href="/" class="btn btn-primary">Go to Dashboard</a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary">Go Back</a>
        </div>
    </main>
</body>
</html>
