@{
    Layout = null;
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (WarehouseApp.Common.Constants.ApplicationConstants.ReleaseYear == currentYear)
        ? $"{currentYear}"
        : $"{WarehouseApp.Common.Constants.ApplicationConstants.ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="403 Access Denied - WarehouseApp" />
    <title>Under Construction | WarehouseApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/error-pages.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/warehouse-solid.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
    <div class="container text-center my-5">
        <i class="fas fa-tools fa-5x text-warning mb-4"></i>

        <h1>Under Construction</h1>
        <p>
            This section is currently being built. Please check back later.
        </p>

        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a href="/" class="btn btn-primary">Go to Dashboard</a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary">Go Back</a>
        </div>

        <footer class="mt-5 text-muted small pb-3">
            <p>&copy; @footerNote WarehouseApp</p>
        </footer>
    </div>
</body>
</html>
