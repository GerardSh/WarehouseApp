@using static WarehouseApp.Common.Constants.ApplicationConstants

@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (ReleaseYear == currentYear) ?
        $"{currentYear}" : $"{ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - WarehouseApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="warehouse-body">

    <header class="warehouse-header mb-4 py-3 border-bottom">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a href="/" class="app-brand">
                <i class="fas fa-warehouse app-icon"></i>
                <span class="app-name">WarehouseApp</span>
            </a>

            <nav class="d-flex align-items-center">
                <partial name="_LoginPartial" />
            </nav>
        </div>
    </header>

    <main role="main" class="container flex-grow-1">
        @RenderBody()
    </main>

    <footer class="app-footer">
        <p>&copy; @footerNote WarehouseApp</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


