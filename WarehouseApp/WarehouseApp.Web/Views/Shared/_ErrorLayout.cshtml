@{
    Layout = null;
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (WarehouseApp.Common.Constants.ApplicationConstants.ReleaseYear == currentYear)
        ? $"{currentYear}"
        : $"{WarehouseApp.Common.Constants.ApplicationConstants.ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="403 Access Denied - WarehouseApp" />
    <title>@ViewData["Title"] | WarehouseApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/error-pages.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/warehouse-solid.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <main class="d-flex flex-column justify-content-center align-items-center min-vh-100 text-center">

        @RenderBody()

        <footer class="mt-5 text-muted small pb-3">
            <p>&copy; @footerNote WarehouseApp</p>
        </footer>
    </main>
</body>
</html>
